#include <stdio.h>

int main(){

    int matricula;
    char nome[40];
    int idade;
    float altura;
  

    printf("Digite sua matricula: \n");
    scanf("%d", &matricula);
    printf("Digite o seu nome: \n");
    scanf("%s",&nome);
    printf("Digite sua idade: \n");
    scanf("%d",&idade);
    printf("Digite sua altura: \n");
    scanf("%f",&altura);
    
    printf("****CADASTRO DOS ALUNOA****\n");
    printf("Matricula: %d - Nome do aluno: %s\n", matricula, nome);
    printf("Idade: %d - Altura: %.2f", idade, altura);
    return 0;
}
